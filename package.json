{
    "name": "4399-on-vscode",
    "displayName": "4399 on VSCode",
    "description": "在 VSCode 上玩 4399 小游戏, 帮助你劳逸结合, 提高开发效率(非 4399 官方提供的扩展)",
    "version": "0.3.0",
    "engines": {
        "vscode": "^1.70.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "contributes": {
        "keybindings": [
            {
                "command": "4399-on-vscode.special",
                "key": "Alt+NumPad4 Alt+T"
            },
            {
                "command": "4399-on-vscode.get",
                "key": "Alt+NumPad4 Alt+G"
            },
            {
                "command": "4399-on-vscode.search",
                "key": "Alt+NumPad4 Alt+S"
            },
            {
                "command": "4399-on-vscode.detail",
                "key": "Alt+NumPad4 Alt+D"
            },
            {
                "command": "4399-on-vscode.history",
                "key": "Alt+NumPad4 Alt+H"
            },
            {
                "command": "4399-on-vscode.recommended",
                "key": "Alt+NumPad4 Alt+R"
            },
            {
                "command": "4399-on-vscode.my",
                "key": "Alt+NumPad4 Alt+M"
            },
            {
                "command": "4399-on-vscode.category",
                "key": "Alt+NumPad4 Alt+C"
            }
        ],
        "configuration": {
            "title": "4399 on VSCode",
            "properties": {
                "4399-on-vscode.user-agent": {
                    "description": "4399 on VSCode 发出的请求头中的 UA",
                    "type": "string",
                    "default": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/103.0.0.0 Safari/537.36"
                },
                "4399-on-vscode.referer": {
                    "description": "4399 on VSCode 发出的请求头中的 referer",
                    "type": "string",
                    "default": "https://www.4399.com/"
                },
                "4399-on-vscode.port": {
                    "description": "4399 on VSCode 本地服务器端口, 修改后必须重启 VSCode",
                    "type": "integer",
                    "scope": "machine",
                    "default": 44399
                },
                "4399-on-vscode.printLogs": {
                    "description": "控制是否输出日志",
                    "type": "boolean",
                    "default": false
                },
                "4399-on-vscode.title": {
                    "description": "控制 Webview 标题, 若留空则使用游戏名称或 4399 on VSCode",
                    "type": "string",
                    "default": ""
                },
                "4399-on-vscode.injectionScripts": {
                    "default": true,
                    "markdownDescription": "控制是否向 Webview 注入用于优化体验以及设置 cookie 的 html 代码片段, 文件存放在 `(主目录)/.4ov-data/html-scripts/`, 点[这里](https://dsy4567.github.io/4ov-scripts/)可以获取更多",
                    "type": "boolean"
                },
                "4399-on-vscode.scripts": {
                    "default": "",
                    "scope": "machine",
                    "markdownDescription": "要向 h5 小游戏入口页面注入的自定义 HTML 代码片段的文件名, 文件存放在`(主目录)/.4ov-data/html-scripts/`, 多个文件应使用英文逗号 + 空格(`, `)隔开, 例如`addStyle.htm, addScript.html`",
                    "type": "string"
                },
                "4399-on-vscode.showIcon": {
                    "default": true,
                    "description": "控制是否使用游戏图标作为 Webview 的图标",
                    "type": "boolean"
                },
                "4399-on-vscode.openUrl": {
                    "default": true,
                    "description": "控制是否允许游戏打开外链/推荐游戏",
                    "type": "boolean"
                },
                "4399-on-vscode.updateHistory": {
                    "default": true,
                    "description": "控制是否允许写入历史记录",
                    "type": "boolean"
                },
                "4399-on-vscode.background": {
                    "default": true,
                    "description": "控制是否允许游戏后台运行",
                    "type": "boolean"
                },
                "4399-on-vscode.automaticCheckIn": {
                    "default": false,
                    "description": "控制是否自动签到",
                    "type": "boolean"
                },
                "4399-on-vscode.alert": {
                    "default": true,
                    "description": "控制是否在游戏开始前显示温馨提示",
                    "type": "boolean"
                },
                "4399-on-vscode.enableProxy": {
                    "default": true,
                    "markdownDescription": "控制是否启用本地代理, 本地代理的示例请求路径为 `http://127.0.0.1:<port>/_4ov/proxy/https://www.4399.com/`",
                    "type": "boolean"
                },
                "4399-on-vscode.requestWithCookieOn4399Domain": {
                    "default": false,
                    "description": "控制本地代理发往 4399.com 域的请求是否应包含 cookie (高风险选项, 非必要请勿启用)",
                    "type": "boolean"
                },
                "4399-on-vscode.enableServiceWorker": {
                    "default": true,
                    "description": "控制是否启用 ServiceWorker, 以便发起跨域请求(如果性能受到影响, 可以禁用)",
                    "type": "boolean"
                }
            }
        },
        "commands": [
            {
                "category": "4399 on VSCode",
                "command": "4399-on-vscode.recommended",
                "title": "推荐"
            },
            {
                "category": "4399 on VSCode",
                "command": "4399-on-vscode.category",
                "title": "分类"
            },
            {
                "category": "4399 on VSCode",
                "command": "4399-on-vscode.get",
                "title": "输入游戏 ID (链接以 http(s)://www.4399.com/flash/ 开头)"
            },
            {
                "category": "4399 on VSCode",
                "command": "4399-on-vscode.get-h5-web-game",
                "title": "输入游戏 ID (链接以 http(s)://www.zxwyouxi.com/g/ 开头)"
            },
            {
                "category": "4399 on VSCode",
                "command": "4399-on-vscode.search",
                "title": "搜索"
            },
            {
                "category": "4399 on VSCode",
                "command": "4399-on-vscode.detail",
                "title": "游戏详情"
            },
            {
                "category": "4399 on VSCode",
                "command": "4399-on-vscode.my",
                "title": "我的"
            },
            {
                "category": "4399 on VSCode",
                "command": "4399-on-vscode.forums",
                "title": "逛群组"
            },
            {
                "category": "4399 on VSCode",
                "command": "4399-on-vscode.history",
                "title": "历史记录"
            },
            {
                "category": "4399 on VSCode",
                "command": "4399-on-vscode.random",
                "title": "试试手气(有几率失败)"
            },
            {
                "category": "4399 on VSCode",
                "command": "4399-on-vscode.more-action",
                "title": "更多操作"
            }
        ],
        "walkthroughs": [
            {
                "id": "4399-on-vscode",
                "title": "4399 on VSCode 入门",
                "description": "了解如何使用 4399 on VSCode 带薪摸鱼（bushi），并了解更多使用技巧。",
                "steps": [
                    {
                        "id": "play",
                        "title": "开玩",
                        "description": "在[推荐游戏](command:4399-on-vscode.recommended)、[搜索游戏](command:4399-on-vscode.search)中找到并启动喜欢的游戏，你也可以[输入游戏 ID](command:4399-on-vscode.get)\n[查看推荐游戏](command:4399-on-vscode.recommended)",
                        "media": {
                            "image": "resources/play.png",
                            "altText": "游戏截图：《冰娃与火娃6》"
                        },
                        "completionEvents": [
                            "onCommand:command:4399-on-vscode.recommended",
                            "onCommand:command:4399-on-vscode.search",
                            "onCommand:command:4399-on-vscode.get",
                            "onCommand:command:4399-on-vscode.get-h5-web-game",
                            "onCommand:command:4399-on-vscode.random"
                        ]
                    },
                    {
                        "id": "login",
                        "title": "登录 4399 账号",
                        "description": "登录 4399 账号后，你可以玩 H5 页游、浏览群组等。\n[登录](command:4399-on-vscode.my)",
                        "media": {
                            "image": "resources/login.png",
                            "altText": "登录"
                        },
                        "completionEvents": [
                            "onSettingChanged:4399-on-vscode.my"
                        ]
                    },
                    {
                        "id": "script",
                        "title": "安装 HTML 代码片段",
                        "description": "HTML 代码片段将在 H5 小游戏启动后被注入，可以优化游戏体验或为 4399 on VSCode 添加新功能。\n[安装 HTML 代码片段](https://dsy4567.github.io/4ov-scripts/)",
                        "media": {
                            "image": "resources/script.png",
                            "altText": "示例 HTML 代码片段"
                        }
                    }
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/cookie": "^0.5.1",
        "@types/glob": "^8.1.0",
        "@types/mime": "^3.0.1",
        "@types/node": "~16.18.38",
        "@types/vscode": "^1.70.0",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "eslint": "^8.44.0",
        "glob": "^8.1.0",
        "typescript": "^5.1.6"
    },
    "packageManager": "pnpm@8.6.5",
    "keywords": [
        "小霸王",
        "游戏",
        "flash",
        "games",
        "高效工作"
    ],
    "publisher": "dsy4567",
    "license": "SEE LICENSE IN LICENSE",
    "dependencies": {
        "axios": "^0.27.2",
        "cheerio": "1.0.0-rc.12",
        "cookie": "^0.5.0",
        "iconv-lite": "^0.6.3",
        "is-localhost-ip": "^2.0.0",
        "mime": "^3.0.0"
    },
    "icon": "icon.png",
    "repository": "https://github.com/dsy4567/4399-on-vscode.git",
    "author": "dsy4567",
    "bugs": {
        "email": "dsy4567@outlook.com",
        "url": "https://github.com/dsy4567/4399-on-vscode/issues"
    },
    "homepage": "https://github.com/dsy4567/4399-on-vscode#readme"
}
